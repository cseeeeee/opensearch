{
  "index": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "analysis": {
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "nori_posfilter": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "E", "IC", "J", "MAG", "MAJ", "MM",
          "SP", "SSC", "SSO", "SC", "SE",
          "XPN", "XSA", "XSN", "XSV",
          "UNA", "NA", "VSV"
        ]
      }
    },
    "analyzer": {
      "korean": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": ["lowercase", "nori_posfilter"]
      },
      "korean_search": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": ["lowercase", "nori_posfilter"]
      }
    }
  }
}
